bindir=/usr/local/bin
libdir=/usr/local/lib/zenon

while : ; do
  case $# in 0) break;; esac
  case "$1" in
    -bindir | --bindir)
       bindir=$2
       shift 2
    ;;
    -libdir | --libdir)
       libdir=$2
       shift 2
    ;;
    *) echo 'usage: ./configure [-bindir <dir>] [-libdir <dir>]' >&2
       exit 2
    ;;
  esac
done

{
  echo BINDIR=$bindir
  echo LIBDIR=$libdir
} >.config_var
