#!/bin/sh

#  Copyright 2004 INRIA
#  $Id: configure,v 1.9 2004-10-29 08:40:36 doligez Exp $

bindir=/usr/local/bin
libdir=/usr/local/lib/foc
coqc=coqc
debug=false

case `hostname` in
  macaque*) debug=true;;
esac

while : ; do
  case $# in 0) break;; esac
  case "$1" in
    -bindir | --bindir)
       bindir=$2
       shift 2
    ;;
    -libdir | --libdir)
       libdir=$2
       shift 2
    ;;
    -debug | --debug)
       debug=true
       shift
    ;;
    *) echo 'usage: ./configure [-bindir <dir>] [-libdir <dir>]' >&2
       exit 2
    ;;
  esac
done

if $debug; then
  bytdebugflags="-g"
  optdebugflags="-p -dtypes"
else
  bytdebugflags=
  optdebugflags=
fi

{
  echo BINDIR="$bindir"
  echo LIBDIR="$libdir"
  echo COQC="$coqc"
  echo BYTDEBUGFLAGS="$bytdebugflags"
  echo OPTDEBUGFLAGS="$optdebugflags"
} >.config_var

echo Configuration summary for zenon:
cat .config_var
