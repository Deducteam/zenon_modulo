bindir=/usr/local/bin
libdir=/usr/local/lib/foc
coqc7='coqc -v7'
coqc8=coqc

while : ; do
  case $# in 0) break;; esac
  case "$1" in
    -bindir | --bindir)
       bindir=$2
       shift 2
    ;;
    -libdir | --libdir)
       libdir=$2
       shift 2
    ;;
    -coq7 | --coq7)
       coqc7=coqc
       coqc8=dummy_coqc8
       (echo '#!/bin/sh'; echo 'touch "$1"o') >dummy_coqc8
       chmod a+x dummy_coqc8
       shift
    ;;
    *) echo 'usage: ./configure [-bindir <dir>] [-libdir <dir>] [-coq7]' >&2
       exit 2
    ;;
  esac
done

{
  echo BINDIR="$bindir"
  echo LIBDIR="$libdir"
  echo COQC7="$coqc7"
  echo COQC8="$coqc8"
} >.config_var

echo Configuration summary for zenon:
cat .config_var
